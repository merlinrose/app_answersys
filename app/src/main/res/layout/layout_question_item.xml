<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/qi_photo"
            android:layout_width="@dimen/news_photo_size"
            android:layout_height="@dimen/news_photo_size"
            android:src="@drawable/ic_photo_man"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/qi_photo"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/qi_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地瓜地瓜我是土豆"
                android:textSize="@dimen/text_size_2"/>
            <TextView
                android:id="@+id/qi_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天 12:09"
                android:textSize="@dimen/text_size_1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/qi_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="高等数学"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/qi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于勾股定理的公式使用方式"
        android:textSize="@dimen/text_size_2"
        android:maxLines="1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/qi_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里是问题的摘要"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_2"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>
</LinearLayout>