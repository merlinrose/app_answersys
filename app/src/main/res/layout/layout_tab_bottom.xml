<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_tab_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/activity_tab_icon_size"
                android:layout_height="@dimen/activity_tab_icon_size"
                android:src="@drawable/ic_tab_news"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="动态"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/main_tab_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/activity_tab_icon_size"
                android:layout_height="@dimen/activity_tab_icon_size"
                android:src="@drawable/ic_tab_publish"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="我的"/>
        </LinearLayout>
        
    </LinearLayout>
    
    
</FrameLayout>